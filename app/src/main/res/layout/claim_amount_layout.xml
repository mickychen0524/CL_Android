<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/main_header_layout">
        <ImageView
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/clerklogo215x215" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/permission_right_img"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/lazlologo_h"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_header_layout"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Value"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_grey_light"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:id="@+id/claim_amount_txt"
            android:text="$2.00"
            android:textStyle="bold"
            android:textColor="@color/color_grey_dark"
            android:textSize="56sp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_grey_light"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:text="When you have credited the Value, touch Complete Claim to complete the transaction."
            android:textSize="16sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/claim_complete_btn"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/color_grey_dark"
            android:text="Complete Claim"
            android:textAllCaps="false"
            android:layout_marginTop="15dp"
            android:background="@color/color_blue_light"/>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/claim_cancel_btn"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/color_grey_dark"
        android:text="Cancel"
        android:textAllCaps="false"
        android:background="@color/color_pink_main"/>
</RelativeLayout>