<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/checkout_file_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/checkout_download_list_tile_image"
        android:layout_width="103dp"
        android:layout_height="133dp"
        android:src="@drawable/channeltilehdsample"/>

    <dev.countryfair.player.playlazlo.com.countryfair.helper.CircleDisplay
        android:id="@+id/checkout_download_list_circle_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@+id/checkout_download_list_tile_image"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/checkout_download_list_status_txt"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:text="Saving..."
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/checkout_download_list_circle_progress" />
</RelativeLayout>
