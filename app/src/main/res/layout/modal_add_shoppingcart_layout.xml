<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/modal_top_image"
        android:layout_marginTop="-40dp"
        android:background="@drawable/background_white_rect">
        <TextView
            android:id="@+id/modal_title_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/add_to_cart"
            android:textColor="#111"
            android:textSize="28sp"
            android:textStyle="bold"/>

        <RelativeLayout android:id="@+id/rlDrawList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/modal_title_text"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
        >

            <Spinner
                android:id="@+id/modal_draw_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#ffffff"
                android:gravity="left"
                android:layout_centerVertical="true"
                android:padding="0dp"
                android:paddingRight="10dp"
                android:textColor="#111"
                android:textSize="18sp"/>

            <ImageView  android:layout_width="10dp"
                       android:layout_height="10dp"
                       android:layout_centerVertical="true"
                       android:adjustViewBounds="true"
                       android:layout_alignParentRight="true"
                       android:src="@drawable/dropdownmenu"
            />


        </RelativeLayout>

        <RelativeLayout android:id="@+id/rlPriceList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@id/rlDrawList"
                        android:layout_marginTop="10dp"
        >
            <Spinner
                android:id="@+id/modal_price_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingRight="10dp"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="0dp"
                android:textColor="#111"
                android:textSize="18sp"/>

            <ImageView  android:layout_width="10dp"
                       android:layout_height="10dp"
                       android:layout_centerVertical="true"
                       android:adjustViewBounds="true"
                       android:layout_alignParentRight="true"
                       android:src="@drawable/dropdownmenu"
            />

            </RelativeLayout>


        <RelativeLayout android:id="@+id/rlPlayList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@id/rlPriceList"
                        android:layout_marginTop="10dp"
        >

            <Spinner
                android:id="@+id/modal_playnumber_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="0dp"
                android:textColor="#111"
                android:textSize="18sp"/>

            <ImageView  android:layout_width="10dp"
                       android:layout_height="10dp"
                       android:adjustViewBounds="true"
                       android:layout_centerVertical="true"
                       android:layout_alignParentRight="true"
                       android:src="@drawable/dropdownmenu"
            />


            </RelativeLayout>




        <TextView
            android:id="@+id/modal_total_price_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlPlayList"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="Total $1.0"
            android:textColor="#111"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/shopping_cart_tile_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_below="@id/modal_total_price_txt"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/channeltilehdsample"/>
        <ImageView
            android:id="@+id/shopping_cart_brand_logo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/modal_total_price_txt"
            android:layout_margin="10dp"
            android:layout_toEndOf="@id/shopping_cart_tile_image"
            android:layout_toRightOf="@id/shopping_cart_tile_image"
            android:src="@drawable/valogovertical_logo"/>
        <ImageView
            android:id="@+id/shopping_cart_game_logo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/shopping_cart_brand_logo"
            android:layout_margin="10dp"
            android:layout_toEndOf="@id/shopping_cart_tile_image"
            android:layout_toRightOf="@id/shopping_cart_tile_image"
            android:src="@drawable/vacash5logo"/>
        <Button
            android:id="@+id/shopping_cart_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/shopping_cart_add"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_yellow_rect"
            android:gravity="center"
            android:text="@string/birthdate_cancel"
            android:textAllCaps="false"
            android:textColor="@color/color_green_primary"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/shopping_cart_add"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/shopping_cart_tile_image"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_green_rect"
            android:gravity="center"
            android:text="@string/add_to_cart"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" android:textStyle="bold"
        />
    </RelativeLayout>

    <ImageView
        android:id="@+id/modal_top_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cf_icon_60"/>


</RelativeLayout>