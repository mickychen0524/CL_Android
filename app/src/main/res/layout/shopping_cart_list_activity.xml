<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMainRed">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:id="@+id/image_back_btn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:src="@drawable/countryfairlogowhite" />

        <Button
            android:layout_width="147dp"
            android:layout_height="40dp"
            android:id="@+id/shopping_cart_list_checkout"
            android:background="@drawable/checkoutgreen_s"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/shopping_cart_list_checkout_count_btn"
            android:textColor="@color/colorWhite"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:background="#00000000"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:text="0"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shopping_cart_list_totalprice_txt"
        android:textColor="@color/colorWhite"
        android:text="Total : $0.5"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ListView
            android:id="@+id/shopping_cart_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    </RelativeLayout>

</LinearLayout>
