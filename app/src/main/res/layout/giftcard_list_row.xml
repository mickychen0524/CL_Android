<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="133dp"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="10dp">

        <ImageView
            android:id="@+id/giftcards_list_tile_image"
            android:layout_width="163dp"
            android:layout_height="133dp"/>
        <TextView
            android:id="@+id/giftcards_list_name_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/colorWhite"
            android:text="Name"
            android:gravity="left"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/giftcards_list_tile_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/giftcards_list_value_txt"
            android:textColor="@color/colorWhite"
            android:text="$50.00"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/giftcards_list_tile_image"
            android:layout_below="@+id/giftcards_list_name_txt" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:id="@+id/giftcards_list_buynow_btn"
            android:textColor="@color/colorWhite"
            android:background="@color/colorMainRed"
            android:text="Buy Now"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/giftcards_list_tile_image"
            android:layout_below="@+id/giftcards_list_value_txt" />
    </RelativeLayout>

</RelativeLayout>